create schema public2;
CREATE OR REPLACE FUNCTION execute2(text)
 RETURNS integer
 LANGUAGE plpgsql
 STRICT
AS $function$DECLARE 
   body ALIAS FOR $1; 
   result INT; 
 BEGIN 
--   RAISE NOTICE 'Execute: %', body; 
   set search_path=public2;
   EXECUTE body; 
   GET DIAGNOSTICS result = ROW_COUNT; 
   reset search_path;
   RETURN result; 
 END; 
 $function$
;
CREATE OR REPLACE FUNCTION rebuild(oid)
 RETURNS integer
 LANGUAGE plpgsql
 STRICT
AS $function$
DECLARE 
   ddl text; 
   result INT; 
   obj record;
 BEGIN 
   raise notice 'REBUILD % %',(ddlx_identify($1)).sql_kind,(ddlx_identify($1)).sql_identifier;
   ddl := ddlx_script($1,'{drop,nowrap}');
   EXECUTE ddl; 
   GET DIAGNOSTICS result = ROW_COUNT; 
   RETURN result; 
 END; 
 $function$
;
